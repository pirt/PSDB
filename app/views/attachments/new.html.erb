<h3>Add attachment</h3>
<%= form_for @attachment, :html => {:multipart => true} do |a| %>
  <div class="field">
    <%= a.label :filename %><br />
    <%= a.file_field :content %>
  </div>
  <div class="field">
    <%= a.label :description %><br />
    <%= a.text_field :description, :size => 75 %>
  </div>
  <div class="actions">
    <%= a.submit "Add Attachment" %>
    <%= a.submit "Cancel", :name => "cancel" %>
  </div>
<% end %>
