<div class="span-12">
  <h3>Image</h3>
  <% camIsOn=instanceValueSet.getStringParameter("Camera State")=="on/true" ? true : false %>
  <% instancevalues=instanceValueSet.instancevalues %>
  <% if camIsOn %>
    <%= displayParameter(instancevalues,"Image",{:width=>450, :height=>800, :withExport=>true}) %>
  <% else %>
    <%= image_tag "icon_ERROR.png" %>
  <% end %>
</div>
<div class="span-12 last">
  <% polarity=instancevalues.find_by_name("Trigger Polarity").data_numeric>0 ? true : false %>
  <% if polarity
       polarityIcon="icon_RISING.png"
     else
       polarityIcon="icon_FALLING.png"
     end
  %>
  <h3>Acquisition Parameters</h3>
  <ul>
    <li>Camera State: <%= displayParameter(instancevalues,"Camera State") %></li>
    <li>Camera Model: <%= displayParameter(instancevalues,"Camera Model") %></li>
    <li>Camera Mode: <%= displayParameter(instancevalues,"Current Mode") %></li>
    <li>Brightness: <%= displayParameter(instancevalues,"Brightness",{:precision=>0}) %></li>
    <li>Shutter: <%= displayParameter(instancevalues,"Shutter",{:precision=>0}) %></li>
    <li>Gain: <%= displayParameter(instancevalues,"Gain",{:precision=>0}) %></li>
    <li>Trigger Mode: <%= displayParameter(instancevalues,"Trigger Mode",{:precision=>0}) %></li>
    <li>Trigger Timeout: <%= displayParameter(instancevalues,"Timeout",{:precision=>0}) %></li>
    <li>Trigger Polarity: <%= image_tag polarityIcon, {:style=>"vertical-align:middle"} %></li>
    <li>Serial Number: <%= displayParameter(instancevalues,"Serial Number",{:precision=>0}) %></li>
  </ul>
</div>
