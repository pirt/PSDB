<h3>Image<h3>
<% imagedata=instancedatas.find_by_name("image") %>
<%= render :partial => "instancedatas/instancedata", 
    :locals => { :instancedata => imagedata, :options => {:width=>400, :height=>300}} %>
<%= form_tag({:controller => "instancedatas", :action => "exportImage"}, :method => "get") do %>
    <%= hidden_field_tag(:instanceDataId,imagedata.id) %>
    <%= label_tag(:imageFormat, "Format:") %>
    <% possibleFormat=options_for_select([['BMP', 1], ['TIF', 2], ['JPG',3], ['PNG',4]]) %>
    <%= select_tag(:selectedExportFormat,possibleFormat) %> 
    <%= submit_tag("Export Image") %>
  <% end %><br />
<h3>Acquisition Parameters</h3>
<% brightnessdata=instancedatas.find_by_name("brightness") %>
<h4>Brightness: <%= render brightnessdata %></h4>
<% shutterdata=instancedatas.find_by_name("shutter") %>
<h4>Shutter: <%= render shutterdata %></h4>
<% gaindata=instancedatas.find_by_name("gain") %>
<h4>Gain: <%= render gaindata %></h4>
