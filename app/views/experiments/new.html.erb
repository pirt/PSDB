<h2>Add new experiment</h2>
<%= form_for(@experiment) do |e| %>
  <%= render 'shared/error_messages' %>
  <div class="field">
    <%= e.label :name %><br />
    <%= e.text_field :name %>
  </div>
  <div class="field">
    <%= e.label :description %><br />
    <%= e.text_field :description %>
  </div>
  <div class="actions">
    <%= e.submit "Add Experiment" %>
  </div>
<% end %>
