<h2>Available Experiments</h2>
<%= link_to 'Add new experiment', new_experiment_path %>
<%= will_paginate @experiments %>
<table border=0>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
  </tr>

  <% @experiments.each do |experiment| %>
    <tr>
      <td><%= link_to experiment.name, experiment %></td>
      <td><%= experiment.description %></td>
      <td><%= link_to 'Edit', edit_experiment_path(experiment) %> 
          <%= link_to "Delete", experiment, :method => :delete, :confirm => "Are You sure?",
                                :title => "Delete #{experiment.name}" %>

      </td>
    </tr>
  <% end %>
</table>
<%= will_paginate @experiments %>

