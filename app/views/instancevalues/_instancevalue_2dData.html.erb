<% urlOptions={:controller => "dynamic_images", :action => "showPlot", :id=>instancevalue.id}.merge(options) %>
<img src="<%= url_for urlOptions %>"/>
<% if options[:withExport]==true %>
<%= form_tag({:controller => "instancevalues", :action => "exportPlot"}, :method => "get") do %>
  <%= hidden_field_tag(:instanceValueId,instancevalue.id) %>
  <%= label_tag(:imageFormat, "Format:") %>
  <% possibleFormat=options_for_select([['TXT',6]],6) %>
  <%= select_tag(:selectedExportFormat,possibleFormat) %>
  <%= submit_tag("Export Spectrum") %>
<% end %>
<% end %>
